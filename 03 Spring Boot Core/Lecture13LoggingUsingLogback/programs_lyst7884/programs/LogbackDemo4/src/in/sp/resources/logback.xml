<configuration>

	<root level="info">
		<appender-ref ref="FILE" />
	</root>
	
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>d:/mylogs/app.log</file>
		<encoder>
			<pattern>[%date{dd-MM-yyyy HH:mm:ss.SSS}] [%thread] [%-5level] [%logger] - %msg%n</pattern>
		</encoder>
	</appender>

</configuration>