<configuration>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%yellow(%date{dd-MM-yyyy HH:mm:ss.SSS})] [%thread] [%highlight(%-5level)] [%cyan(%logger)] - %msg%n</pattern>
		</encoder>
	</appender>

</configuration>